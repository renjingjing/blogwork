<!DOCTYPE html>
<html>
<head lang="en">
  <title>Blog Work</title>
   <!-- <link href="css/bootstrap.min.css" rel="stylesheet"> -->
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
     <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
     <%= csrf_meta_tags %></head>
<body>
  <div class="container-fluid">
        <div class="container-fluid  header">
          <%= render "/layouts/navbar" %>
        </div>

      <!-- add flash notice part -->
        <div class="container-fluid">
              <% if flash[:notice] %>
            <div class="alert alert-success" role="alert">
              <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
              <%= flash[:notice] %>
            </div>
      <% elsif flash[:alert] %>
            <div class="alert alert-danger" role="alert">
              <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
              <%= flash[:alert] %>
          <% end %>
            </div>
        </div>
        <div class="container home_m_block " data-spy="scroll" data-target=".navbar" data-offset="12" >
                <%= yield %>
        </div >
        <div class="container-fluid">
          <%= render "/layouts/footer" %>
        </div>
  </div>
  <script src="//cdnjs.bootcss.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
  <script src="//cdnjs.bootcss.com/ajax/libs/twitter-bootstrap/2.3.1/js/bootstrap.min.js"></script>

</body>
</html>
